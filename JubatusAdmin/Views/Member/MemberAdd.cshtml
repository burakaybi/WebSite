@model JubatusAdmin.ViewModels.MemberViewModel
@{
    ViewBag.Title = "MemberForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Üye Formu</h2>
@using (Html.BeginForm("MemberAdd", "Member", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Email)
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Email, "" ,new { @class = "text-danger" })
    </div>
    <div class="form-group" style="height:100% !important;">
        <label>Rol Seçiniz:</label>
        @Html.DropDownListFor(m => m.MemberRoleId, new SelectList(Model.Roles, "MemberRoleId", "MemberRoleDesc", Model.MemberRoleId), "Seçiniz", new { @class = "form-control", style = "height:100%" })
        @Html.ValidationMessageFor(m => m.MemberRoleId, "", new { @class = "text-danger" })
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
}