@model JubatusAdmin.Models.Categories
@{
    ViewBag.Title = "ShowCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Kategori Güncelleme</h2>

@using (Html.BeginForm("CategoryUpdate", "Category", FormMethod.Post))
{
    @Html.HiddenFor(m=> m.CategorieId)
    <div class="form-group">
        @Html.LabelFor(m => m.CategorieName)
        @Html.TextBoxFor(m => m.CategorieName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.IsEnabled)
        @Html.TextBoxFor(m => m.IsEnabled, new { @class = "form-control" })
    </div>
    <div>
        <button class="btn btn-warning">Güncelle</button>
        <button class="btn btn-outline-danger">İptal</button>
    </div>

}
